{
    "Version": "2012-10-17",
    "Statement": [        
        {
            "Sid": "EC2Premissions",
            "Effect": "Allow",
            "Resource": "*",
            "Action": [
                "ec2:TerminateInstances",
                "ec2:StopInstances",
                "ec2:StartInstances",
                "ec2:RebootInstances"
            ],
            "Condition": {
                "StringEquals": {
                    "ec2:ResourceTag/owner": "$${aws:username}"
                }
            }
        }
    ]
}